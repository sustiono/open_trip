<!DOCTYPE html>
<html>
  <head>
    <title>OpenTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice.present? %>
      <p class='notice'><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class='alert'><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
